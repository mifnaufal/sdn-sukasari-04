generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
  // Kalau pakai PlanetScale, tambahkan ini:
  // relationMode = "prisma"
}

model User {
  id       String   @id @default(cuid())
  nama     String
  email    String   @unique
  password String?
  role     Role     @default(USER)
  createdAt DateTime @default(now())
  kegiatan Kegiatan[]
}

model Kegiatan {
  id         String   @id @default(cuid())
  judul      String
  deskripsi  String
  tanggal    DateTime
  foto       String   // URL Cloudinary / path lokal
  dibuatOleh User     @relation(fields: [userEmail], references: [email])
  userEmail  String
  createdAt  DateTime @default(now())
}

model Prestasi {
  id        String   @id @default(cuid())
  nama      String
  kategori  String
  deskripsi String
  tahun     Int
  foto      String
  createdAt DateTime @default(now())
}

model Guru {
  id        String   @id @default(cuid())
  nama      String
  jabatan   String
  foto      String
  deskripsi String?
  createdAt DateTime @default(now())
}

model HeroImage {
  id      String @id @default(cuid())
  url     String
  caption String?
}

enum Role {
  ADMIN
  GURU
  USER
}